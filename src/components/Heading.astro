---
const { level } = Astro.props;
---

{
  level === 1 ? (
    <h1 class="text-foreground mb-2 text-3xl font-bold">
      <slot />
    </h1>
  ) : level === 2 ? (
    <h2 class="text-foreground mb-2 text-2xl font-bold">
      <slot />
    </h2>
  ) : level === 3 ? (
    <h3 class="text-foreground mb-2 text-xl font-bold">
      <slot />
    </h3>
  ) : (
    <h4 class="text-foreground mb-2 text-lg font-bold">
      <slot />
    </h4>
  )
}
