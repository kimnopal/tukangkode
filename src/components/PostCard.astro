---
const { title, summary, url, publishedDate, category } = Astro.props;
---

<article
  class="bg-card border-border hover:border-ring cursor-pointer rounded-[0.65rem] border p-5 transition-all duration-200 hover:-translate-y-1 hover:shadow-lg hover:shadow-black/5 md:p-8"
>
  <a href={url} class="block no-underline">
    <!-- Post Meta -->
    <div
      class="text-muted-foreground mb-4 flex flex-wrap items-center gap-4 text-sm"
    >
      <span class="flex items-center gap-2">
        ðŸ“… {publishedDate}
      </span>
      <span
        class="bg-muted text-muted-foreground rounded-full px-3 py-1 text-xs font-medium"
      >
        {category}
      </span>
    </div>

    <!-- Post Title -->
    <h3
      class="text-card-foreground hover:text-primary mb-3 text-xl leading-snug font-semibold transition-colors duration-200"
    >
      {title}
    </h3>
    <!-- Post Excerpt -->
    <p class="text-muted-foreground mb-3 leading-relaxed">
      {summary}
    </p>

    <!-- Read More -->
